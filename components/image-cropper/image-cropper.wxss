/* 图片裁切组件样式 */
.image-cropper {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.85);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 裁切器容器 */
.cropper-container {
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  width: 100%;
  max-width: 680rpx;
  max-height: 85vh;
  display: flex;
  flex-direction: column;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
}

/* 头部区域 */
.cropper-header {
  padding: 32rpx 40rpx;
  border-bottom: 2rpx solid #f5f5f5;
  text-align: center;
  background: #fafafa;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  letter-spacing: 1rpx;
}

/* 内容区域 */
.cropper-content {
  padding: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  min-height: 400rpx;
  max-height: 60vh;
  overflow: hidden;
}

/* Canvas容器 */
.canvas-container {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  min-height: 400rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  overflow: hidden;
}

/* 图片Canvas */
.image-canvas {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  z-index: 1;
  box-sizing: border-box;
  background: #ffffff;
}

/* 遮罩Canvas */
.mask-canvas {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  z-index: 2;
  pointer-events: auto;
  box-sizing: border-box;
  cursor: crosshair;
}

/* 选择图片区域 */
.select-image {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  min-height: 400rpx;
}

.select-btn {
  padding: 24rpx 48rpx;
  background: linear-gradient(135deg, #007aff 0%, #0056b3 100%);
  color: #ffffff;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(0, 122, 255, 0.3);
  transition: all 0.3s ease;
}

.select-btn:active {
  background: linear-gradient(135deg, #0056b3 0%, #003d82 100%);
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.4);
}

/* 底部按钮区域 */
.cropper-footer {
  padding: 32rpx 40rpx;
  border-top: 2rpx solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
  background: #fafafa;
}

.btn {
  flex: 1;
  padding: 24rpx 32rpx;
  border: none;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.cancel-btn {
  background: #f5f5f5;
  color: #666666;
  border: 2rpx solid #e0e0e0;
}

.cancel-btn:active {
  background: #e8e8e8;
  color: #555555;
  transform: translateY(1rpx);
}

.confirm-btn {
  background: linear-gradient(135deg, #007aff 0%, #0056b3 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(0, 122, 255, 0.3);
}

.confirm-btn:active {
  background: linear-gradient(135deg, #0056b3 0%, #003d82 100%);
  transform: translateY(1rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.4);
}

/* 临时Canvas */
.temp-canvas {
  position: absolute;
  left: -9999rpx;
  top: -9999rpx;
  width: 2rpx;
  height: 2rpx;
  opacity: 0;
  pointer-events: none;
}

/* 响应式适配 */
@media screen and (max-width: 750rpx) {
  .cropper-container {
    max-width: 95vw;
    margin: 0 20rpx;
  }
  
  .cropper-content {
    padding: 24rpx;
    min-height: 300rpx;
  }
  
  .canvas-container {
    min-height: 300rpx;
  }
  
  .title {
    font-size: 32rpx;
  }
  
  .btn {
    font-size: 28rpx;
    padding: 20rpx 24rpx;
  }
}

@media screen and (max-height: 1200rpx) {
  .cropper-content {
    max-height: 50vh;
    min-height: 280rpx;
  }
  
  .canvas-container {
    min-height: 280rpx;
  }
}
