/**index.wxss**/
/* 主容器样式 */
.container {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-sizing: border-box;
}

/* 图片裁切演示区域样式 */
.cropper-demo {
  margin-top: 80rpx;
  padding: 60rpx 40rpx;
  background: #ffffff;
  border-radius: 32rpx;
  width: 100%;
  max-width: 600rpx;
  box-sizing: border-box;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
}

/* 标题样式 */
.demo-title {
  font-size: 44rpx;
  font-weight: 700;
  text-align: center;
  margin-bottom: 60rpx;
  color: #333333;
  letter-spacing: 2rpx;
  position: relative;
}

.demo-title::after {
  content: '';
  position: absolute;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 6rpx;
  background: linear-gradient(90deg, #007aff 0%, #0056b3 100%);
  border-radius: 3rpx;
}

/* 按钮样式 */
.demo-btn {
  background: linear-gradient(135deg, #007aff 0%, #0056b3 100%);
  color: #ffffff;
  border: none;
  border-radius: 16rpx;
  padding: 32rpx 48rpx;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 40rpx;
  width: 100%;
  box-shadow: 0 8rpx 24rpx rgba(0, 122, 255, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.demo-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s;
}

.demo-btn:hover::before {
  left: 100%;
}

.demo-btn:active {
  background: linear-gradient(135deg, #0056b3 0%, #003d82 100%);
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.4);
}

/* 裁切后图片容器 */
.cropped-image-container {
  margin-top: 40rpx;
  text-align: center;
  padding: 40rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  border: 2rpx dashed #e0e0e0;
  transition: all 0.3s ease;
}

.cropped-image-container:hover {
  border-color: #007aff;
  background: #f0f8ff;
}

/* 图片标签 */
.image-label {
  display: block;
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 30rpx;
  font-weight: 500;
  letter-spacing: 1rpx;
}

/* 裁切后的图片 */
.cropped-image {
  width: 300rpx;
  height: 300rpx;
  border: 4rpx solid #ffffff;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  background: #ffffff;
}

.cropped-image:hover {
  transform: scale(1.05);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.2);
}

/* 响应式设计 */
@media screen and (max-width: 750rpx) {
  .container {
    padding: 20rpx;
  }
  
  .cropper-demo {
    margin-top: 40rpx;
    padding: 40rpx 30rpx;
    border-radius: 24rpx;
  }
  
  .demo-title {
    font-size: 38rpx;
    margin-bottom: 40rpx;
  }
  
  .demo-btn {
    font-size: 32rpx;
    padding: 28rpx 40rpx;
  }
  
  .cropped-image {
    width: 250rpx;
    height: 250rpx;
  }
}

@media screen and (max-height: 1200rpx) {
  .cropper-demo {
    margin-top: 40rpx;
  }
  
  .demo-title {
    margin-bottom: 40rpx;
  }
}

/* 动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.cropper-demo {
  animation: fadeInUp 0.6s ease-out;
}

.cropped-image-container {
  animation: fadeInUp 0.6s ease-out 0.2s both;
}
